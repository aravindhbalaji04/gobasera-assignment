# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=society_registration
DB_USER=society_user
DB_PASSWORD=your-super-secure-database-password-here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your-super-secure-redis-password-here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d

# =============================================================================
# FIREBASE ADMIN SDK CONFIGURATION
# =============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# =============================================================================
# RAZORPAY CONFIGURATION
# =============================================================================
RAZORPAY_KEY_ID=rzp_test_your-test-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret-key-here

# =============================================================================
# MINIO CONFIGURATION
# =============================================================================
MINIO_ACCESS_KEY=your-minio-access-key-here
MINIO_SECRET_KEY=your-minio-secret-key-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://yourdomain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=https://api.yourdomain.com
VITE_FIREBASE_API_KEY=your-firebase-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
GRAFANA_PASSWORD=your-grafana-admin-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_MS=5000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis connection pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================
# Uncomment and modify for staging environment
# NODE_ENV=staging
# CORS_ORIGIN=https://staging.yourdomain.com
# VITE_API_URL=https://staging-api.yourdomain.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Docker registry (if using private registry)
# DOCKER_REGISTRY=your-registry.com
# DOCKER_USERNAME=your-username
# DOCKER_PASSWORD=your-password

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================
# Slack webhook for deployment notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Google Analytics
# GA_TRACKING_ID=GA-XXXXXXXXX

# =============================================================================
# DEVELOPMENT OVERRIDES (Comment out in production)
# =============================================================================
# DEBUG=true
# NODE_ENV=development
# LOG_LEVEL=debug
